{
    "hooks": [
        {
            "type": "PreCommit",
            "command": "ULTRA_DOC_AUTO_ACTION=quick /ultra-doc",
            "description": "Run Ultra-Doc quick check before committing"
        },
        {
            "type": "SessionStart",
            "command": "cat changelog/$(ls -t changelog | head -n 1) 2>/dev/null || echo 'No recent doc changes.'",
            "description": "Show recent documentation changes on startup"
        },
        {
            "type": "UserPromptSubmit",
            "regex": "(deploy|ship|release)",
            "command": "ULTRA_DOC_AUTO_ACTION=quick /ultra-doc",
            "description": "Check docs before deployment"
        },
        {
            "type": "PostToolUse",
            "tool": "write_to_file",
            "condition": "args.TargetFile.includes('context_for_llms')",
            "command": "ULTRA_DOC_AUTO_ACTION=sync /ultra-doc",
            "description": "Sync metadata when docs are manually edited"
        },
        {
            "type": "Idle",
            "command": "ULTRA_DOC_AUTO_ACTION=summary /ultra-doc",
            "description": "Remind the user about documentation health when the repo sits idle"
        }
    ]
}
